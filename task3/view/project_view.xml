<odoo>
	<record id="project2_view_form" model="ir.ui.view">
		<field name="name">project2.form</field>
		<field name="model">project2</field>
		<field name="arch" type="xml">
			<form string="Project">
				<sheet>
					<group>
						<group>
						<field name="name" />
						</group>
						<group>
							<field name="project_id" />
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>
	<record model="ir.ui.view" id="project2_tree">
            <field name="name">project</field>
            <field name="model">project2</field>
            <field name="arch" type="xml">
                <tree >
                    <field name="name"/>
<!--                    <field name="project_id"/>-->
                </tree>
            </field>
	</record>

	<record id="project2_action" model="ir.actions.act_window">
		<field name="name">Project</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">project2</field>
		<field name="view_mode">tree,form</field>

	</record>

	<menuitem id="menu_project2" name="Project" parent="menu_field" action='project2_action' />
</odoo>