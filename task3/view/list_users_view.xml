<odoo>
	<record id="list_users_view_form" model="ir.ui.view">
		<field name="name">users.form</field>
		<field name="model">users</field>
		<field name="arch" type="xml">
			<form string="Users">
				<sheet>
					<group>
						<group>
						<field name="name" />
						</group>
						<group>
							<field name="list_product" />
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>
	<record model="ir.ui.view" id="users_tree">
            <field name="name">users</field>
            <field name="model">users</field>
            <field name="arch" type="xml">
                <tree >
                    <field name="name"/>
                </tree>
            </field>
	</record>

	<record id="users_action" model="ir.actions.act_window">
		<field name="name">Users</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">users</field>
		<field name="view_mode">tree,form</field>

	</record>

	<menuitem id="menu_users" name="Users" parent="menu_field" action='users_action' />
</odoo>