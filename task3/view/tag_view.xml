<odoo>



        <record model="ir.ui.view" id="project_tag_search_view">
                    <field name="name">Tags</field>
                    <field name="model">project.tag</field>
                    <field name="arch" type="xml">
                        <search string="Issue Version">
                            <field name="name"/>
                        </search>
                    </field>
        </record>

        <record model="ir.ui.view" id="project_tag_form_view">
                <field name="name">Tags</field>
                <field name="model">project.tag</field>
                <field name="arch" type="xml">
                    <form string="Tags">
                        <sheet>
                            <group>
                                <field name="name"/>
                                <field name="color" widget="color_picker"/>
                            </group>
                        </sheet>
                    </form>
                </field>
        </record>

        <record model="ir.ui.view" id="project_tag_tree_view">
            <field name="name">Tags</field>
            <field name="model">project.tag</field>
            <field name="arch" type="xml">
                <tree string="Tags" editable="bottom" sample="1">
                    <field name="name"/>
                    <field name="color" widget="color_picker"/>
                </tree>
            </field>
        </record>
        <record id="project_tag_action" model="ir.actions.act_window">
            <field name="name">Tags</field>
            <field name="res_model">project.tag</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                No tags found. Let's create one!
              </p>
              <p>
                  Tags are perfect to categorize your tasks.
              </p>
            </field>
        </record>

    <menuitem id="menu_project_tag" name="Tags" parent="menu_field" action='project_tag_action' />
</odoo>